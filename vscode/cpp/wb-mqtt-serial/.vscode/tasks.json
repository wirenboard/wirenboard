{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "schroot -c bullseye-amd64-sbuild -- /bin/bash -c 'DEB_HOST_MULTIARCH=arm-linux-gnueabihf make -j12'",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Debug build",
            "type": "shell",
            "command": "schroot -c bullseye-amd64-sbuild -- /bin/bash -c 'DEB_HOST_MULTIARCH=arm-linux-gnueabihf DEBUG=1 make -j12'",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Debug build test",
            "type": "shell",
            "command": "schroot -c bullseye-amd64-sbuild -- /bin/bash -c 'DEB_HOST_MULTIARCH=arm-linux-gnueabihf DEBUG=1 make -j12 test/wb-homa-test'",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Debug build test with coverage",
            "type": "shell",
            "command": "schroot -c bullseye-amd64-sbuild -- /bin/bash -c 'DEB_HOST_MULTIARCH=arm-linux-gnueabihf DEBUG=1 make -j12 lcov'",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Run test",
            "type": "shell",
            "command": "schroot -c bullseye-amd64-sbuild -- /bin/bash -c 'DEB_HOST_MULTIARCH=arm-linux-gnueabihf TEST_ARGS=\"--gtest_filter=TModbusExtTest.ReadEvents -d 1\" make -j12 test'",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "Run all tests",
            "type": "shell",
            "command": "schroot -c bullseye-amd64-sbuild -- /bin/bash -c 'DEB_HOST_MULTIARCH=arm-linux-gnueabihf make -j12 test'",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "Run tests for debug",
            "type": "shell",
            "command": "cd test && qemu-arm-static -L /srv/chroot/sbuild-bullseye-cross -g 12345 wb-homa-test",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "Debug build test"
            ],
            "problemMatcher": []
        },
        {
            "label": "Make deb (must be run outside of devenv)",
            "type": "shell",
            "command": "nix run ../wb-nixpkgs#wbdev -- cdeb -j12",
            "problemMatcher": []
        },
        {
            "label": "Debug build and copy to wb7",
            "type": "shell",
            "command": "scp /workspaces/wb-mqtt-serial/build/debug/wb-mqtt-serial wirenboard-A7PWH4NX:/usr/bin/",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Debug build"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build and copy to wb7",
            "type": "shell",
            "command": "scp /workspaces/wb-mqtt-serial/build/release/wb-mqtt-serial wirenboard-A7PWH4NX:/usr/bin/",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build"
            ],
            "problemMatcher": []
        }
    ]
}
